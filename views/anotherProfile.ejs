<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title><%= user ? user.fullName : '' %> â€¢ Blogify Profile</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* General styling */
        body {
            background-color: #fafafa;
            color: #333;
            font-family: Arial, sans-serif;
        }
        
        .profile-container {
            max-width: 900px;
            margin: 2rem auto;
            background-color: #fff;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .profile-header {
            text-align: center;
            margin-bottom: 1.5rem;
            border-bottom: 1px solid #ddd;
            padding-bottom: 1rem;
        }

        /* Profile image styling */
        .profile-img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 1rem;
            border: 3px solid #dbdbdb;
        }

        .profile-info h3 {
            font-size: 24px;
            font-weight: bold;
            margin: 0;
        }

        .profile-stats {
            display: flex;
            justify-content: center;
            gap: 2rem;
            margin-top: 1rem;
            font-size: 16px;
        }

        .profile-stats div {
            text-align: center;
        }

        /* Button styling */
        .btn-edit, .prof-btn {
            background-color: #0095f6;
            color: #fff;
            border: none;
            padding: 0.5rem 1rem;
            font-size: 14px;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            transition: background-color 0.3s, transform 0.2s;
        }

        .btn-edit:hover, .prof-btn:hover {
            background-color: #007bb5;
            transform: translateY(-2px);
        }

        /* Posts section */
        .posts-carousel {
            margin-top: 2rem;
        }

        .carousel-item img {
            border-radius: 8px;
            max-height: 400px;
            object-fit: cover;
        }

        /* Cards for blog posts */
        .post-card {
            width: 100%;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .post-card:hover {
            transform: scale(1.03);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        }

        .post-card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .post-card-body {
            padding: 1rem;
            text-align: center;
        }

        .author-info {
            position: absolute;
            top: 1rem;
            right: 1rem;
            text-align: center;
        }

        a {
            color: black;
            text-decoration: none;
        }
        a:hover {
            color: #007bb5;
        }
        @media (max-width: 768px) {
            .blog-title {
                font-size: 2rem;
            }
            .author-image {
                width: 60px;
                height: 60px;
            }
            .blog-body {
                max-height: 300px;
            }
            .author-info {
                top: 0.5rem;
                right: 0.5rem;
            }
        }
    </style>
</head>
<body style="background-color: #ecfbff;">
    

    <div class="container profile-container">
        <div class="author-info">
            <a href="/ %>" class="prof-btn">Home</a>
        </div>
        <!-- Profile Header -->
        <div class="profile-header">
            <img src="<%= user.profileImgURL || '/default-profile.png' %>" alt="User Profile Image" class="profile-img">
            <h3><%= user.fullName %></h3>
            <p class="text-muted"><%= user.email %></p>

            <!-- Profile Stats -->
            <div class="profile-stats">
                <div>
                    <strong>Posts</strong><br>
                    <%= user.blogs.length %>
                </div>
                <div>
                    <a href="/user/followers-following/<%= user._id %>/<%= currId %>"><strong>Followers</strong><br>
                    <%= user.followers.length %></a>
                </div>
                <div>
                    <a href="/user/followers-following/<%= user._id %>/<%= currId %>"><strong>Following</strong><br>
                    <%= user.following.length %></a>
                </div>
            </div>

            <a href="/user/<%= user.followers.includes(currId) ? 'removeFollower' : 'addFollower' %>/<%= user._id %>/<%= currId %>" >
                <button  class="btn <%= user.followers.includes(currId) ? 'btn-danger' : 'btn-primary' %>">
                    <%= user.followers.includes(currId) ? 'Unfollow' : 'Follow' %>
                </button>
            </a>
        </div>

        <!-- Blog Posts Section -->
        <% if (user.blogs.length > 0) { %>
            <h4 class="mt-4">Recent Blog Posts</h4>
            <div id="postCarousel" class="carousel slide posts-carousel" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <% user.blogs.forEach((blog, index) => { %>
                        <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                            <div class="post-card">
                                <a href="/blog/<%= blog._id %>">
                                    <img src="<%= blog.imageURL %>" alt="<%= blog.title %>">
                                    <div class="post-card-body">
                                        <h5><%= blog.title %></h5>
                                    </div>
                                </a>
                            </div>
                        </div>
                    <% }) %>
                </div>
                <!-- Carousel controls -->
                <button class="carousel-control-prev" type="button" data-bs-target="#postCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#postCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        <% } else { %>
            <p class="mt-4 text-center">No posts yet.</p>
        <% } %>
    </div>
    <%- include('./partials/footer') %>
    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
