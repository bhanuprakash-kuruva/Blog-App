<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Search Results for <%= searchTerm %></title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #121212; /* Dark background */
            color: #f8f9fa; /* Light text color */
        }
        .card {
            background-color: #1e1e1e; /* Darker card background */
            color: #f8f9fa;
            border: none;
        }
        .card:hover {
            transform: scale(1.05);
            transition: transform 0.3s;
        }
        .btn-primary {
            background-color: #007bff; /* Adjusted for better contrast */
            border: none;
        }
        .btn-primary:hover {
            background-color: #0056b3; /* Darker on hover */
        }
        .back-to-top {
            position: fixed;
            bottom: 20px;
            right: 20px;
            display: none;
            z-index: 1000;
        }
        .pagination .page-link {
            background-color: #1e1e1e;
            color: #f8f9fa;
            border: 1px solid #343a40;
        }
        .pagination .page-link:hover {
            background-color: #343a40;
        }
        .alert-warning {
            background-color: #ffcc00;
            color: #212529;
        }
    </style>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container mt-5">
        <h2 class="text-center mb-4">Search Results for "<%= searchTerm %>"</h2>

        <!-- Search Form -->
        

        <% if (blogs.length === 0) { %>
            <div class="alert alert-warning text-center" role="alert">
                No results found for "<%= searchTerm %>".
            </div>
        <% } else { %>
            <!-- Blog Cards -->
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                <% blogs.forEach(blog => { %>
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <img src="<%= blog.imageURL %>" class="card-img-top img-fluid" alt="Blog Image" style="height: 200px; object-fit: cover;">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title"><%= blog.title %></h5>
                                <% if (blog.tags && blog.tags.length > 0) { %>
                                    <p class="text-muted small mb-2">
                                        Tags: 
                                        <% blog.tags.forEach(tag => { %>
                                            <span class="badge bg-secondary"><%= tag %></span>
                                        <% }); %>
                                    </p>
                                <% } %>
                                <p class="card-text"><%= blog.body.substring(0, 100) %>...</p>
                                <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto">Read More</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>

            <!-- Pagination (if applicable) -->
            <nav aria-label="Page navigation" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
        <% } %>
    </div>

    <!-- Back to Top Button -->
    <button class="btn btn-secondary back-to-top">â†‘ Top</button>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Show/hide Back to Top button
        const backToTopButton = document.querySelector('.back-to-top');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 200) {
                backToTopButton.style.display = 'block';
            } else {
                backToTopButton.style.display = 'none';
            }
        });

        backToTopButton.addEventListener('click', () => {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });
    </script>
</body>
</html>
