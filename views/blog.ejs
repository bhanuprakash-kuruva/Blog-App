<% if(user){ %>
    <% if(blog){ %>
        <body style="background-color: #a8eeff;display:flex;flex-direction:column;gap:20px">
            <%- include('./partials/nav') %>
            <div style="display: flex; justify-content: center; align-items: center; text-align: center; margin-bottom:10px;">
                <div class="author-info" style="position: relative; text-align: center;">
                    <img src="<%= blog.createdBy.profileImgURL %>" class="author-image mb-2" 
                         alt="Author Image" 
                         style="width: 80px; height: 80px; border-radius: 50%; border: 3px solid #007bff; transition: transform 0.2s;">
                    <h6 class="text-primary" style="font-size: 1.2rem; color: #007bff;"><%= blog.createdBy.fullName %></h6>
                    <a href="/user/profile/<%= blog.createdBy._id %>/<%= user._id %>" class="prof-btn" 
                       style="background-color: #6bb2ff; color: black; border: none; padding: 0.5rem 1rem; border-radius: 5px; 
                              margin-top: 0.5rem; transition: background-color 0.2s ease, transform 0.2s; display: inline-block; text-decoration: none;">
                        View Author
                    </a>
                </div>
            </div>
            
            <div class="container  blog-container mt-5" >
                <!-- Blog Title and Image -->
                <div style="width: 100%;">
                    <div class="text-center">
                        <h1 class="blog-title mb-3"><%= blog.title %></h1>
                        <img src="<%= blog.imageURL %>" width="700px" class="img-fluid rounded mb-4" alt="Blog Image">
                    </div>
        
                    <!-- Blog Content -->
                    <div class="blog-body mb-4 p-4 bg-light rounded">
                        <p class="lead text-dark">
                            <pre style="font-family: inherit; white-space: pre-wrap;"><%= blog.body %></pre>
                        </p>
                    </div>
                </div>
                
                <!-- Delete Button for Blog Creator -->
                <% if (user && user._id.toString() === blog.createdBy._id.toString()) { %>
                    <form action="/blog/delete/<%= blog._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this blog?');" class="d-inline-block">
                        <button type="submit" class="btn btn-danger mt-3 d-flex align-items-center">
                            <i class="bi bi-trash me-2"></i> Delete Blog
                        </button>
                    </form>
                <% } %>
                
                <!-- Like Section -->
                <div class="likes-section mt-4">
                    <form action="/blog/like/<%= blog._id %>" method="POST" class="d-flex align-items-center">
                        <button type="submit" class="btn btn-outline-primary d-flex align-items-center me-3">
                            <% if (blog.likes.includes(user._id)) { %>
                                <i class="bi bi-hand-thumbs-down-fill me-2"></i> Unlike
                            <% } else { %>
                                <i class="bi bi-hand-thumbs-up-fill me-2"></i> Like
                            <% } %>
                        </button>
                        <span class="fs-5 text-muted"><%= blog.likes.length %> Likes</span>
                    </form>
                </div>
            </div>
            
            <!-- Comments Section -->
            <div class="mt-5">
                <div class="comment-header">
                    Comments (<%= comments.length %>)
                </div>
            
                <% if (locals.user) { %>
                    <form action="/blog/comment/<%= blog._id %>" method="POST" class="mb-4">
                        <div class="mb-3">
                            <textarea name="content" class="form-control" id="content" rows="3" placeholder="Enter your comment here..." required></textarea>
                        </div>
                        <button class="btn btn-success" type="submit">Add Comment</button>
                    </form>
                <% } %>
            
                <% if (comments.length === 0) { %>
                    <p>No comments yet.</p>
                <% } %>
            
                <!-- Display Comments and Replies -->
                <% comments.forEach(comment => { %>
                    <div class="d-flex align-items-start mb-3 comment-container">
                        <img src="<%= comment.createdBy.profileImgURL %>" class="rounded-circle me-3 border" width="50" height="50" alt="Commenter Image">
                        <div>
                            <a href="/user/profile/<%= comment.createdBy._id %>/<%= user._id %>"><h6 class="text-black text-decoration-none mb-1"><%= comment.createdBy.fullName %></h6></a>
                            <p class="text-muted"><%= comment.content %></p>
                            
                            <!-- Reply Button -->
                            <% if (locals.user) { %>
                                <button class="btn btn-link text-decoration-none text-primary p-0" type="button" data-bs-toggle="collapse" data-bs-target="#replyForm<%= comment._id %>">
                                    Reply
                                </button>
                                
                                <!-- Reply Form -->
                                <div class="collapse mt-2" id="replyForm<%= comment._id %>">
                                    <form action="/blog/comment/reply/<%= comment._id %>" method="POST">
                                        <textarea name="replyContent" class="form-control mb-2" rows="2" cols="100" placeholder="Write a reply..." required></textarea>
                                        <button class="btn btn-success btn-sm" type="submit">Submit Reply</button>
                                    </form>
                                </div>
                            <% } %>
            
                            <!-- Display Replies -->
                            <% if (comment.replies && comment.replies.length > 0) { %>
                                <div class="mt-3 ms-5">
                                    <% comment.replies.forEach(reply => { %>
                                        <div class="d-flex align-items-start mb-2">
                                            <img src="<%= reply.createdBy.profileImgURL %>" 
                                                 class="rounded-circle me-3 border" width="40" height="40" 
                                                 alt="Reply Author Image">
                                            <div>
                                                <a href="/user/profile/<%= reply.createdBy._id %>/<%= user._id %>">
                                                    <h6 class="text-black text-decoration-none mb-1"><%= reply.createdBy.fullName %></h6>
                                                </a>
                                                <p class="text-muted"><%= reply.content %></p>
                                            </div>
                                        </div>
                                    <% }) %>
                                </div>
                            <% } %>
                            
                        </div>
                    </div>
                <% }) %>
            </div>
            
    <%- include('./partials/footer') %>
            <!-- JavaScript for Like Button Animation -->
            <script>
                const likeButton = document.querySelector('.likes-section button');
                const likeCount = document.querySelector('.likes-section span');
            
                likeButton.addEventListener('click', () => {
                    likeCount.classList.add('text-primary', 'fw-bold');
                    setTimeout(() => {
                        likeCount.classList.remove('text-primary', 'fw-bold');
                    }, 500);
                });
            </script>
            
            <!-- Bootstrap JS Bundle with Popper -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            <%- include('./partials/script') %>
        </body>
    <% } %>
    <% } %>
    <% if(!user){ %>
        <div class="er">
            <div class="error-container">
                <h1>User Not Found</h1>
                <p>Please log in to continue.</p>
                <a href="/user/signin">Log In</a>
            </div>
        </div>
    <% } %>
    
