<style>
    /* General Mobile Styles */
@media (max-width: 768px) {
    /* Blog Container */
    .blog-container {
        margin-left: 10px;
        margin-right: 10px;
        padding: 1rem;
    }

    /* Blog Title */
    .blog-title {
        font-size: 2rem;
    }

    /* Author Image */
    .author-image {
        width: 60px;
        height: 60px;
    }

    /* Author Info */
    .author-info {
        top: 1rem;
        right: 0.5rem;
    }

    /* Blog Content */
    .blog-body {
        max-height: 300px;
    }

    /* Blog Image */
    .img-fluid {
        max-width: 100%;
        height: auto;
    }

    /* Comments Section */
    .comment-container {
        padding: 0.8rem;
    }

    .comment-header {
        font-size: 1.2rem;
    }

    /* Like Section */
    .likes-section {
        flex-direction: column;
        align-items: flex-start;
    }

    .likes-section button {
        margin-right: 0;
        margin-bottom: 10px;
    }

    /* Form Controls (Text Areas and Buttons) */
    .form-control {
        font-size: 0.9rem;
    }

    .prof-btn {
        font-size: 0.9rem;
        padding: 0.4rem 0.8rem;
    }

    .btn-primary {
        font-size: 0.9rem;
        padding: 0.6rem 1.2rem;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
    }

    /* Comment Text */
    .comment-container p {
        font-size: 1rem;
    }

    /* Navbar */
    .navbar-toggler {
        display: block;
    }

    .navbar-collapse {
        text-align: center;
    }

    /* Footer */
    footer {
        text-align: center;
        padding: 1rem 0;
    }
}

/* For Very Small Screens (Mobile Portrait) */
@media (max-width: 480px) {
    /* Blog Container */
    .blog-container {
        padding: 0.8rem;
    }

    /* Blog Title */
    .blog-title {
        font-size: 1.8rem;
    }

    /* Author Image */
    .author-image {
        width: 50px;
        height: 50px;
    }

    /* Author Info */
    .author-info {
        margin: auto;
        height: 50px;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

    /* Blog Content */
    .blog-body {
        max-height: 250px;
    }

    /* Buttons */
    .prof-btn, .btn-primary {
        font-size: 0.8rem;
        padding: 0.4rem 1rem;
    }

    /* Comment Section */
    .comment-container {
        padding: 0.6rem;
    }

    /* Navbar Toggler */
    .navbar-toggler {
        display: block;
    }
}

/* For Extra Small Screens (Phones in Portrait) */
@media (max-width: 375px) {
    /* Blog Container */
    .blog-container {
        padding: 0.6rem;
    }

    /* Blog Title */
    .blog-title {
        font-size: 1.6rem;
    }

    /* Author Info */
    .author-info {
        top: 1rem;
        right: 0.5rem;
        font-size: 0.9rem;
    }

    /* Author Image */
    .author-image {
        width: 45px;
        height: 45px;
    }

    /* Blog Content */
    .blog-body {
        max-height: 200px;
    }

    /* Comment Container */
    .comment-container {
        padding: 0.5rem;
    }

    /* Likes Section */
    .likes-section {
        flex-direction: column;
        align-items: flex-start;
    }

    /* Form Controls */
    .form-control {
        font-size: 0.8rem;
    }

    .prof-btn {
        font-size: 0.8rem;
        padding: 0.4rem 0.8rem;
    }

    .btn-primary {
        font-size: 0.8rem;
        padding: 0.5rem 1.2rem;
    }

    .comment-container p {
        font-size: 0.9rem;
    }

    /* Footer */
    footer {
        padding: 1rem 0;
    }
}

</style>
